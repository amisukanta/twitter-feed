


<h1>Listing schedules</h1>


<table>
  <thead>
    <tr>
      <th>Schedule</th>
      
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @schedules.each do |s| %>
      <tr>
        <td><%= am_pm(s.cron) %></td>
        
        <td><%= link_to 'Show', s %></td>
        <td><%= link_to 'Destroy', s, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to 'New schedule', new_schedule_path %>